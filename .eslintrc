{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "strict": 0,
        "arrow-parens": [
            "error",
            "always"
        ],
        "import/prefer-default-export": 0,
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": ["error", 2],
        "react/jsx-indent-props": ["error", 2],
        "max-len": [
            1,
            {
                "code": 120
            }
        ]
    },
    "env": {
        "mocha": true
    }
}
